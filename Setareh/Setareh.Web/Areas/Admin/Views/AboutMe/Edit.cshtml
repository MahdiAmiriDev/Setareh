@model Setareh.DAL.ViewModels.AboutMeEditModel

@{
    ViewData["Title"] = "ویرایش درباره من";
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="#" onclick="return false;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="#" onclick="return false;">اقدام</a>
                            </li>
                            <li>
                                <a href="#" onclick="return false;">اقدامی دیگر</a>
                            </li>
                            <li>
                                <a href="#" onclick="return false;">چیز دیگری اینجا</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="FirstName" class="form-control"
                                           placeholder="نام">
                                    <span asp-validation-for="FirstName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="LastName" type="number"
                                           class="form-control" placeholder="نام خانوادگی">
                                    <span asp-validation-for="LastName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="Email" type="text"
                                           class="form-control" placeholder="ایمیل">
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="Mobile" type="text"
                                           class="form-control" placeholder="موبایل">
                                    <span asp-validation-for="Mobile"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="Position" type="text"
                                           class="form-control" placeholder="سمت">
                                    <span asp-validation-for="Position"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="Location" type="text"
                                           class="form-control" placeholder="محل زندگی">
                                    <span asp-validation-for="Location"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <input class="form-control" placeholder="تاریخ تولد" type="date" asp-for="BirthDate">
                                    <span asp-validation-for="BirthDate"></span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <textarea class="form-control" placeholder="درباره من" type="text" asp-for="BirthDate"></textarea>
                                        <span asp-validation-for="Description"></span>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <button type="button"
                                            class="btn btn-warning btn-lg m-l-15 waves-effect">
                                        ویرایش
                                    </button>
                                </div>
                            </div>
                </form>
            </div>
        </div>
    </div>
</div>