@using Setareh.DAL.ViewModels

@model ContactUsDetailViewModel

@{
    ViewData["Title"] = "جزئیات تماس با ما";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="#" onclick="return false;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="#" onclick="return false;">اقدام</a>
                            </li>
                            <li>
                                <a href="#" onclick="return false;">اقدامی دیگر</a>
                            </li>
                            <li>
                                <a href="#" onclick="return false;">چیز دیگری اینجا</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form asp-action="Details" method="post">
                    <input type="hidden" asp-for="Id"/>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" readonly asp-for="Title" class="form-control" placeholder="عنوان">
                                    <span asp-validation-for="Title"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" readonly asp-for="Email" class="form-control" placeholder="ایمیل">
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" readonly asp-for="Mobile" class="form-control" placeholder="موبایل">
                                    <span asp-validation-for="Mobile"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" readonly asp-for="FirstName" class="form-control" placeholder="نام">
                                    <span asp-validation-for="FirstName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" readonly asp-for="LastName" class="form-control" placeholder="نام خانوادگی">
                                    <span asp-validation-for="LastName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <textarea class="form-control" readonly asp-for="Description" placeholder="توضیحات">
                                        @Model.Description
                                    </textarea>
                                    <span asp-validation-for="Description"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <textarea class="form-control" asp-for="Answer" placeholder="پاسخ">
                                        @Model.Answer
                                    </textarea>
                                    <span asp-validation-for="Answer"></span>
                                </div>
                            </div>
                        </div>
                        @if (string.IsNullOrEmpty(Model.Answer))
                        {
                            <div class="col-lg-12">
                                <button type="submit"
                                        class="btn btn-success btn-lg m-l-15 waves-effect">
                                    ثبت پاسخ
                                </button>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>