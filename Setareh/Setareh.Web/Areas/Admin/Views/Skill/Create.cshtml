@using Setareh.DAL.ViewModels.Skill
@model CreateSkillViewModel

@{
    ViewData["Title"] = "افزودن مهارت";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="#" onclick="return false;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="#" onclick="return false;">اقدام</a>
                            </li>
                            <li>
                                <a href="#" onclick="return false;">اقدامی دیگر</a>
                            </li>
                            <li>
                                <a href="#" onclick="return false;">چیز دیگری اینجا</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form asp-action="Create" method="post">
                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Title" class="form-control" placeholder="عنوان">
                                    <span asp-validation-for="Title"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="Percentage" type="number" class="form-control" placeholder="میزان مهارت">
                                    <span asp-validation-for="Percentage"></span>
                                </div>
                            </div>
                        </div>                        
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="row">
                                <button type="submit"
                                        class="btn btn-success m-l-15 waves-effect">
                                    ثبت
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>